<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculadora3">

    <TextView
        android:id="@+id/tNum1"
        android:layout_width="364dp"
        android:layout_height="71dp"
        android:layout_marginTop="120dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tNum2"
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tNum1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tNum1"
        app:layout_constraintTop_toBottomOf="@+id/tOperacion" />

    <TextView
        android:id="@+id/tResult"
        android:layout_width="358dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tNum1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/tNum1"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/tOperacion"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tNum1"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/tNum1"
        app:layout_constraintTop_toBottomOf="@+id/tNum1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="129dp"
        android:layout_height="63dp"
        android:layout_marginTop="24dp"
        android:text="="
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/tNum2"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/tNum2"
        app:layout_constraintTop_toBottomOf="@+id/tNum2" />
</androidx.constraintlayout.widget.ConstraintLayout>